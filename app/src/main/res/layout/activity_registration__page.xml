<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#fff"
    tools:context="com.dilliwal.akash.MarkKar.Registration_Page">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="25pt"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
        android:inputType="textFilter"
        android:id="@+id/editTuserNameR"
        android:hint="UserName"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="25pt"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editTextPassP"
        android:hint="Password"
        android:layout_below="@+id/editTuserNameR"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editTuserNameR"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:background="@drawable/button_border"
        android:textColor="#000"
        android:layout_marginTop="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/buttonReg"
        android:onClick="register"
        android:layout_below="@+id/editTextPassP"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editTextPassP"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Register"
        android:textSize="24sp"
        android:fontFamily="sans-serif"

        android:textColor="#000"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="or"
        android:id="@+id/textView4"
        android:layout_below="@+id/buttonReg"
        android:layout_centerHorizontal="true"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:background="@drawable/button_border"
        android:textColor="#000"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already a Member !"
        android:id="@+id/buttonLog"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/buttonReg"
        android:onClick="login"/>
</RelativeLayout>
